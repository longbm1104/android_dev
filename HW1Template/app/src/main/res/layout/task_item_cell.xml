<?xml version="1.0" encoding="utf-8"?>
<!-- task_item_cell.xml: Defines how each task item should look in the list.
     Getting this right is key for a usable interface. Each element must be placed thoughtfully. -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- TextView for displaying the task title.
         DO NOT underestimate the importance of this view. Itâ€™s what the user sees first for each task. -->

    <!-- ImageView to mark the task as done or to delete it.
         This MUST be interactive. Implement the necessary logic in TaskItemAdapter.kt for user actions. -->

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:text="Place Holder"
        android:textColor="#030303"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivUncheckAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="351dp"
        android:contentDescription="Uncheck box"
        android:src="@drawable/uncheck_24" />

    <TextView
        android:id="@+id/tvTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="233dp"
        android:text="Place Holder"
        android:textColor="#030303"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivTaskAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="Delete Action"
        android:src="@drawable/delete_24" />

</RelativeLayout>
